<!DOCTYPE html>
<html>
  <head>
    <title>GroupUp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- If user is signed in, display logout -->
    <% if user_signed_in? %>
    <div class="logout-btn"> <%= link_to "Logout", destroy_user_session_path, method: :delete %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
