<div class="registrations-wrapper">
  <h2 class="page-title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Email:"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@email.com" %>
  </div>
  <div class="field">
    <%= f.label :fname, "First Name:" %><br />
    <%= f.text_field :fname, autofocus: true, autocomplete: "fname", placeholder: "Jane"%>
  </div>
  <div class="field">
    <%= f.label :lname, "Last Name:" %><br />
    <%= f.text_field :lname, autofocus: true, autocomplete: "lname", placeholder: "Doe" %>
  </div>
  <div class="field">
    <%= f.label :username, "Username:" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Lil Doe" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation:" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
